<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cbdb.chatapp.ConnectActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle Wi-Fi"
        android:id="@+id/btnWifiToggle"
        android:layout_above="@+id/btnSearch"
        android:layout_centerHorizontal="true"
        android:onClick="toggleWifi" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for Peers"
        android:id="@+id/btnSearch"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="search" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to Peer"
        android:id="@+id/btnConnect"
        android:layout_below="@+id/btnSearch"
        android:layout_alignStart="@+id/btnSearch"
        android:onClick="connect" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Chat Activity"
        android:id="@+id/btnChatActivity"
        android:layout_below="@+id/btnConnect"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
